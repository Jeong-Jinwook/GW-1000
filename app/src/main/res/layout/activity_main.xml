<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_back_image">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@null"
            android:layout_weight="7"
            android:id="@+id/hidden_s_1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_weight="86" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@null"
            android:layout_weight="7"
            android:id="@+id/hidden_s_4"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="90">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_weight="5"
                android:id="@+id/hidden_s_5" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="95" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:id="@+id/b_language"
                    android:layout_weight="43"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/language_ko"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:id="@+id/b_inverter"
                    android:layout_weight="17"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/inverter_0"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:id="@+id/b_emotion"
                    android:layout_weight="30"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/emotion_off"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/b_back"
                    android:layout_weight="10"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_circle_back_off"/>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="53">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:id="@+id/linearLayout3"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:layout_marginRight="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_1m"
                        android:layout_weight="25"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/sleepmode_1min"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_3m"
                        android:layout_weight="25"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/sleepmode_3min"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_5m"
                        android:layout_weight="25"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/sleepmode_5min"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_coutinue"
                        android:layout_weight="25"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/sleepmode_continue_off"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14">

                </LinearLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:id="@+id/seekBar"
                    android:maxHeight="20dp"
                    android:minHeight="20dp"
                    android:max = "100"
                    android:background="@drawable/alarm_bar_1"
                    android:thumb="@drawable/alarm_bar_control"
                    android:foregroundGravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="12">

                </SeekBar>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15">

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:layout_marginRight="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_rf"
                        android:layout_weight="25"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/off"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_ex"
                        android:layout_weight="25"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/off"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_wa"
                        android:layout_weight="25"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/off"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_pa"
                        android:layout_weight="25"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/off"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="42">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="28">

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="72"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="18dp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button11"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button21"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button31"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button41"
                            android:layout_marginTop="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="18dp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/button12"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button22"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/button_off"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/button32"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/button42"
                            android:layout_marginTop="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="18dp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button13"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button23"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button33"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button43"
                            android:layout_marginTop="3dp"
                            android:layout_weight="25"
                            android:background="@drawable/button_off"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@null"
            android:layout_weight="7"
            android:id="@+id/hidden_s_2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_weight="86" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@null"
            android:layout_weight="7"
            android:id="@+id/hidden_s_3"/>

    </LinearLayout>


</LinearLayout>
