<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manual_mode_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manual_mode_setting_backimage"
    android:orientation="vertical"
    tools:context="com.sinest.gw_1000.mode.Activity_manual_mode_setting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="55dp"
        android:layout_weight="0.8">

        <TextClock
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:id="@+id/textClock" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="45dp"
        android:layout_weight="0.2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/manual_mode_1"
            android:id="@+id/manual_setting_selected_mode"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/manual_mode_pattern_1"
            android:id="@+id/manual_mode_setting_1"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="83dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/manual_mode_pattern_1"
            android:id="@+id/manual_mode_setting_2"
            android:layout_marginLeft="444dp"
            android:layout_marginTop="83dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/manual_mode_pattern_1"
            android:id="@+id/manual_mode_setting_3"
            android:layout_marginLeft="643dp"
            android:layout_marginTop="83dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manual_mode_setting_save"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="800dp"
            android:background="@drawable/save_mode_off"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manual_mode_setting_back"
            android:layout_marginLeft="800dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/button_circle_back_off"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:textSize="45dp"
            android:text="00"
            android:onClick="onClicked"
            android:id="@+id/manual_setting_text_1"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="205dp"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:textSize="45dp"
            android:text="00"
            android:onClick="onClicked"
            android:id="@+id/manual_setting_text_2"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="415dp"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:textSize="45dp"
            android:text="00"
            android:onClick="onClicked"
            android:id="@+id/manual_setting_text_3"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="610dp"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:textSize="45dp"
            android:text="00"
            android:onClick="onClicked"
            android:id="@+id/manual_setting_text_4"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="805dp"/>
    </RelativeLayout>

</LinearLayout>
