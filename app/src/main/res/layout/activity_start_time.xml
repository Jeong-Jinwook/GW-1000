<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/start_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/water_heater_start_timer_keyped"/>

    <LinearLayout
        android:layout_alignStart="@+id/start_time_id"
        android:layout_alignEnd="@+id/start_time_id"
        android:layout_alignTop="@+id/start_time_id"
        android:layout_alignBottom="@+id/start_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_weight="15" />

        <Chronometer
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/start_time"
            android:textSize="50dp"
            android:textColor="#00ffff"
            android:gravity="center"
            android:layout_weight="70" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_weight="15" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="74">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time1"
                    android:background="@drawable/keypad_1"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time2"
                    android:background="@drawable/keypad_2"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time3"
                    android:background="@drawable/keypad_3"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time4"
                    android:background="@drawable/keypad_4"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time5"
                    android:background="@drawable/keypad_5"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time6"
                    android:background="@drawable/keypad_6"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_marginTop="1dp"
              android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time7"
                    android:background="@drawable/keypad_7"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time8"
                    android:background="@drawable/keypad_8"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1" />

                <Button
                  android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time9"
                    android:background="@drawable/keypad_9"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time0"
                    android:background="@drawable/keypad_0"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time_enter"
                    android:background="@drawable/keypad_enter"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1" />

             <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/start_time_back"
                   android:background="@drawable/keypad_back"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13">
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
