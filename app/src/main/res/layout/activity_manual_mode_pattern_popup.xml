<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.sinest.gw_1000.mode.Activity_manual_mode_pattern_popup">

    <ImageView
        android:id="@+id/activity_manual_mode_pattern_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/manual_mode_popup"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/activity_manual_mode_pattern_popup"
        android:layout_alignEnd="@+id/activity_manual_mode_pattern_popup"
        android:layout_alignTop="@+id/activity_manual_mode_pattern_popup"
        android:layout_alignBottom="@+id/activity_manual_mode_pattern_popup"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/manual_popup_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/manual_mode_pattern_1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_weight="15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <com.sinest.gw_1000.mode.utils.CustomSeekBar_made_by_Jinwook
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_centerInParent="true">
            </com.sinest.gw_1000.mode.utils.CustomSeekBar_made_by_Jinwook>
        </LinearLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="35">

            <TableRow android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pattern_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button01" />

                <ImageView
                    android:id="@+id/pattern_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button02" />

                <ImageView
                    android:id="@+id/pattern_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button03" />
            </TableRow>

            <TableRow android:gravity="center">

                <ImageView
                    android:id="@+id/pattern_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button04" />

                <ImageView
                    android:id="@+id/pattern_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button05" />

                <ImageView
                    android:id="@+id/pattern_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button06" />
            </TableRow>

            <TableRow android:gravity="center">

                <ImageView
                    android:id="@+id/pattern_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button07" />

                <ImageView
                    android:id="@+id/pattern_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button08" />

                <ImageView
                    android:id="@+id/pattern_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button09" />
            </TableRow>

            <TableRow android:gravity="center">

                <ImageView
                    android:id="@+id/pattern_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button10" />

                <ImageView
                    android:id="@+id/pattern_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button11" />

                <ImageView
                    android:id="@+id/pattern_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/manualmode_popup_button12" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="17">
            <ImageView
                android:id="@+id/manual_popup_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/save_mode_off" />

            <ImageView
                android:id="@+id/manual_popup_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_circle_back_off" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
