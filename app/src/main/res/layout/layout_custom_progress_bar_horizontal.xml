<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:gravity="center"
    android:id="@+id/custom_progress_bar_horizontal"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/progress_main_view_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/progress_bar_full_horizon" />

    <RelativeLayout
        android:id="@+id/rel_progress_min_horizontal"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:layout_gravity="right">
        <View
            android:id="@+id/progress_inactive_line_top_horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dp"
            android:background="@color/grey" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_progress_max_horizontal"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="27dp"
        android:layout_gravity="right">

        <View
            android:id="@+id/progress_inactive_line_bottom_horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="1dp"
            android:background="@color/grey"/>

    </RelativeLayout>

    <View
        android:id="@+id/progress_filter_parent_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
