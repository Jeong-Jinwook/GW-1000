<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/waiting_rfid_doorclose_back"
    android:orientation="vertical"

    tools:context="com.sinest.gw_1000.mode.Activity_waiting_rfid">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="55dp"
        android:layout_weight="0.8">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/waiting_rfid_library_button"
            android:onClick="onClicked"
            android:layout_marginRight="10dp"
            android:background="@drawable/library" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/waiting_rfid_setting_button"
            android:layout_marginRight="60dp"
            android:background="@drawable/setting" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffffff"

            android:id="@+id/textClock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="65dp"
        android:layout_weight="0.2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/humidity"
                android:id="@+id/waiting_rfid_humidity"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="120dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/oxygen"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/waiting_rfid_humidity"
                android:layout_marginStart="100dp"
                android:id="@+id/waiting_rfid_oxygen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/temperature"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/waiting_rfid_temperature_above" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/temperature"
                android:layout_below="@+id/waiting_rfid_temperature_above"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:id="@+id/waiting_rfid_temperature_below" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="140dp"
                android:id="@+id/waiting_rfid_dooropen_button"
                android:button="@drawable/door_open_off"
                android:layout_alignParentBottom="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="29dp"
                android:id="@+id/waiting_rfid_doorclose_button"
                android:button="@drawable/door_close_off"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/waiting_rfid_oxygen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:onClick="onClicked"
                        android:id="@+id/waiting_rfid_oxygen_up_button"
                        android:background="@drawable/button_up"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/waiting_rfid_oxygen_up_button"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:onClick="onClicked"
                        android:id="@+id/waiting_rfid_oxygen_down_button"
                        android:background="@drawable/button_down" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp"
                        android:id="@+id/waiting_rfid_oxygen_text"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:onClick="onClicked"
                        android:id="@+id/waiting_rfid_pressure_up_button"
                        android:background="@drawable/button_up"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/waiting_rfid_pressure_up_button"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:onClick="onClicked"
                        android:id="@+id/waiting_rfid_pressure_down_button"
                        android:background="@drawable/button_down" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp"
                        android:id="@+id/waiting_rfid_pressure_text"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:onClick="onClicked"
                        android:id="@+id/waiting_rfid_time_up_button"
                        android:background="@drawable/button_up"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/waiting_rfid_time_up_button"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:onClick="onClicked"
                        android:id="@+id/waiting_rfid_time_down_button"
                        android:background="@drawable/button_down" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp"
                        android:id="@+id/waiting_rfid_time_text"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

